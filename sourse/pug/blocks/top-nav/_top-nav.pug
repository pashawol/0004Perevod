mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy.d-none.d-md-block
		.container
			.row
				.col-aside.col-3
				.col-main.col
					.row
						.col
							+mnu2()
						+e.tel-col.col-auto
							+e.tel(href="tel:100-100-100")
								+icon('call')
