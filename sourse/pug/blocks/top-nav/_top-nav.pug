			+e.head
				+lang()
				+e.logo
					a(href="#")
						img.res-i(src="img/svg/logo-light.svg", alt="")
				+b.toggle-menu-mobile--js
					span
			.menu-accordion
				+aside-mnu()
			+mnu()
			//- +col-main("t")
