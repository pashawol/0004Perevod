mixin tel-block()
	+b.tel-block&attributes(attributes)
		+e.link(href="tel:8(916)657-88-39") 8 (916) 657-88-39
		br
		+e.link(href="tel:8(495)789-68-40") 8 (495) 789-68-40 (доб.&nbsp;500&nbsp;или&nbsp;501)
mixin col-main()
	+e.col.col-main.col&attributes(attributes)
		.row
			.col
				+mnu() 
			+lang()(class="col-auto")
			.col-auto
				+e.modal-link--main(href="#") 
					img.res-i(src="img/svg/mail_icon.svg", alt="") 
					.d-none.d-lg-inline Обратная связь
			 
mixin top-line(t)
	// start .top-line
	+b.top-line.block-with-lazy
		.container
			+b.toggle-menu-mobile--js.d-md-none
				span
			.row
				.col-aside.col-md-3
					+e.aside
						+e.logo
							a(href="#"): img.res-i(src="img/svg/logo.svg", alt="")
						block
						
						//- div.d-none.d-md-block
						//- 	+e.modal-link(href="#")
						//- 		img.res-i(src="img/svg/mail_icon.svg", alt="")
						//- 		div Обратная связь

				+col-main(t)(class="top-line__col--line d-none d-md-block")
	// end .top-line